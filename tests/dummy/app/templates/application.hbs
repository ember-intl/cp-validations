<h2 id="title">ember-intl-cp-validations</h2>

<div class="email-validation">
  {{@model.validations.attrs.email.message}}
</div>

<div class="emailConfirmation-validation">
  {{@model.validations.attrs.emailConfirmation.message}}
</div>

<div class="password-validation">
  {{@model.validations.attrs.password.message}}
</div>

<div class="passwordConfirmation-validation">
  {{@model.validations.attrs.passwordConfirmation.message}}
</div>

<div class="username-validation">
  {{@model.validations.attrs.username.message}}
</div>

<Input
  id="email"
  @type="email"
  @value={{@model.email}}
/>

<Input
  id="emailConfirmation"
  @type="email"
  @value={{@model.emailConfirmation}}
/>

<Input
  id="password"
  @type="password"
  @value={{@model.password}}
/>

<Input
  id="passwordConfirmation"
  @type="password"
  @value={{@model.passwordConfirmation}}
/>

<Input
  id="username"
  @type="text"
  @value={{@model.username}}
/>
